<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CriarFlashcardFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/text_criar_flashcard_title"
        android:paddingTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_criar_flashcard_frente"
            android:textColor="@color/palavras" />

        <EditText
            android:id="@+id/editFrente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_criar_flashcard_frente"
            style="@style/EditTextTheme"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/criar_flashcard_verso"
            android:textColor="@color/palavras" />

        <EditText
            android:id="@+id/editVerso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_criar_flashcard_verso"
            style="@style/EditTextTheme"
            android:layout_marginBottom="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_salvar"
            style="@style/ButtonTheme"
            />

    </LinearLayout>

</FrameLayout>
