<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TOOLBAR -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TITULO DISCIPLINA -->
    <TextView
        android:id="@+id/tituloDisciplina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_criar_flashcard_disciplina"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TÍTULO MATÉRIA -->
    <TextView
        android:id="@+id/tituloMateria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_materia"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/tituloDisciplina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RECYCLER -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFlashcards"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tituloMateria"
        app:layout_constraintBottom_toTopOf="@id/btCriarFlashcard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BOTÃO FIXO EMBAIXO -->
    <Button
        android:id="@+id/btCriarFlashcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_criar_flashcard_title"
        style="@style/ButtonTheme"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TEXTO QUANDO NÃO TEM FLASHCARDS -->
    <TextView
        android:id="@+id/textSemFlashcards"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_without_flashcard"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tituloMateria"
        app:layout_constraintBottom_toTopOf="@id/btCriarFlashcard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
