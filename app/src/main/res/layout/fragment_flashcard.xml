<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#EEF5E5">

    <!-- Botão fechar -->
    <ImageView
        android:id="@+id/btFechar"
        android:src="@drawable/ic_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="8dp" />

    <!-- Texto de progresso no topo, centralizado -->
    <TextView
        android:id="@+id/textProgresso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btFechar"
        android:text="0 / 0 respondidos"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#3E603B" />

    <!-- Container do flashcard, centralizado vertical/horizontal -->
    <FrameLayout
        android:id="@+id/cardArea"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/btnBack"
            android:src="@drawable/ic_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical|start"
            android:padding="6dp"
            android:elevation="6dp" />

        <ImageView
            android:id="@+id/btnForward"
            android:src="@drawable/ic_foward"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical|end"
            android:padding="6dp"
            android:elevation="6dp" />

        <FrameLayout
            android:id="@+id/cardContainer"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bg_materia"
            android:elevation="8dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/textFrente"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="32dp"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textTras"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="32dp"
                android:textSize="26sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </FrameLayout>

    </FrameLayout>

    <!-- BOTÕES FIXADOS NA PARTE INFERIOR -->
    <LinearLayout
        android:id="@+id/botoesArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <!-- ERREI -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnErrei"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:layout_marginEnd="8dp"
                android:text="Errei"
                android:backgroundTint="@color/red_500"
                android:textColor="@color/fundo" />

            <TextView
                android:id="@+id/textErros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erros: 0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- ACERTEI -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btnAcertei"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:text="Acertei"
                android:backgroundTint="@color/green_500"
                android:textColor="@color/fundo" />

            <TextView
                android:id="@+id/textAcertos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acertos: 0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
