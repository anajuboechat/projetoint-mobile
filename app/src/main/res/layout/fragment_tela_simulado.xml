<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CONTEÚDO PRINCIPAL (ScrollView) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- CONTAINER DA QUESTÃO -->
            <LinearLayout
                android:background="@drawable/bg_container"
                android:padding="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtEnunciado"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RadioGroup
                    android:id="@+id/groupAlternativas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <!-- BOTÕES -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnAnterior"
                    android:text="Anterior"
                    android:textColor="#FFF"
                    android:backgroundTint="@color/verde_pescuro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnProxima"
                    android:text="Próxima"
                    android:textColor="#FFF"
                    android:backgroundTint="@color/verde_pescuro"
                    android:layout_marginStart="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- MURAL DE QUESTÕES -->
            <LinearLayout
                android:background="@drawable/bg_container"
                android:layout_marginTop="24dp"
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tituloQuestoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Questões"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal" />

                <GridLayout
                    android:id="@+id/gridQuestoes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="5"
                    android:useDefaultMargins="true" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- OVERLAY FULLSCREEN (agora cobre tudo) -->
    <FrameLayout
        android:id="@+id/overlayResultado"
        android:visibility="gone"
        android:background="#AA000000"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progressLoading"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/txtResultado"
                android:textColor="#FFF"
                android:textSize="22sp"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>