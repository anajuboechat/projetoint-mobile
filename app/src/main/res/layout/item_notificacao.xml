<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/bg_item">

    <!-- Ícone -->
    <ImageView
        android:id="@+id/imgIcone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/chat" />

    <!-- Data (canto superior direito) -->
    <TextView
        android:id="@+id/txtData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="05/05/2025"
        android:textColor="#555"
        android:textSize="12sp"
        android:paddingBottom="4dp" />

    <!-- Botão X logo abaixo da data -->
    <ImageButton
        android:id="@+id/btnFechar"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/txtData"
        android:background="@null"
        android:src="@drawable/cross"
        android:contentDescription="Fechar notificação" />

    <!-- Texto da notificação sem colidir com data/botão -->
    <TextView
        android:id="@+id/txtMensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imgIcone"
        android:layout_marginStart="16dp"
        android:layout_alignTop="@id/imgIcone"
        android:layout_alignBottom="@id/imgIcone"
        android:layout_toStartOf="@id/btnFechar"
        android:layout_marginEnd="12dp"
        android:textSize="16sp"
        android:textColor="#000"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="Mais notificações" />

</RelativeLayout>
